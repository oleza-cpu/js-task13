    <script type="text/javascript">
// Розширення прототипу Array методом sortDesc()
Array.prototype.sortDesc = function() {
    return this.sort(function(a, b) {
        return b - a;
    });
};

// Використання методу sortDesc()
var arr = [5, 1, 4, 2, 3];
arr.sortDesc();
console.log(arr); // [5, 4, 3, 2, 1]

        </script>
