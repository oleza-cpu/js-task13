    <script type="text/javascript">
function matrixToArray(matrix) {
    return matrix.reduce(function(acc, curr) {
        return acc.concat(curr);
    }, []);
}

var arr = [[1, 2], [3, 4, 5], [6, 7, 8], [9]];
var arr = matrixToArray(arr);
console.log(arr); // [1, 2, 3, 4, 5, 6, 7, 8, 9]

        </script>
