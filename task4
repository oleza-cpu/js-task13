    <script type="text/javascript">
function addTwoDays(date) {
    // Отримуємо поточний день місяця
    var currentDay = date.getDate();
    
    // Додаємо два дні
    date.setDate(currentDay + 2);
    
    return date;
}

// Приклад використання
var currentDate = new Date();
var newDate = addTwoDays(currentDate);
console.log(newDate);


        </script>
